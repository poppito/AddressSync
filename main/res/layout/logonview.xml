<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/tableLayout1"
             android:paddingLeft="@dimen/LogonPaddingLeft"
             android:paddingRight="@dimen/LogonPaddingRight"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:background="@drawable/bg_logon_view"
             android:gravity="center"
             android:orientation="vertical"
             tools:context=".MainActivity">

    <Button
        android:id="@+id/logonbutton"
        android:layout_width="@dimen/LogonButtonWidth"
        android:layout_height="@dimen/LogonButtonHeight"
        android:background="@color/bg"
        android:contentDescription="@string/logonbutton"
        android:text="@string/logonbutton"/>
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/explainWhy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name">
    </TextView>
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/termsAndConditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name">
    </TextView>
</TableLayout>